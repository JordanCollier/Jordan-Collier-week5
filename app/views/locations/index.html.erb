<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" href="/locations/new">New Location </a>
  </div>
<h1>Locations</h1>
</div>

<table class="table table-striped table-hover">

  <colgroup>
    <col class="col-xs-2">
    <col class="col-xs-3">

  </colgroup>


  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zip Code</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location  %></td>
        <td><%= location.address %></td>
        <td><%= location.zip_code %></td>
        <td class="text-right">
        </td>

        <td class="text-right">
        <%= link_to 'Edit', edit_location_path(location), :class => "btn btn-info"  %>

        <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
