

<div class="page-header">
  <div class="pull-right  ">
  <%= link_to 'Edit', edit_location_path, :class => "btn btn-info"  %>
</div>
  <h1><%= @location.name %></h1>
</div>

<ol class="breadcrumb">
  <li><a href="/locations">locations</a></li>
  <li class="active"><%= @location.name %></li>
</ol>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @location.name %></dd>
  <dt><strong>Address:</strong></dt>
  <dd><%= @location.address %></dd>
  <dt><strong>Zip Code:</strong></dt>
  <dd><%= @location.zip_code %></dd>
</dl>



<div class="page-header">
  <div class="pull-right">
    <%= link_to "New Event", new_location_event_path(@location), class: "btn btn-info" %>
  </div>
<h1>Events</h1>
</div>

<table class="table table-striped table-hover">

  <colgroup>
    <col class="col-xs-2">
    <col class="col-xs-3">

  </colgroup>


  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Requires_id</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @location.events.each do |event| %>
      <tr>
        <td><%= link_to event.description, [@location, event]  %></td>
        <td><%= event.date %></td>
        <td><%= event.requires_id %></td>
        <td class="text-right">
        </td>

        <td class="text-right">
        <%= link_to 'Edit', edit_location_event_path(@location, event), :class => "btn btn-info"  %>

        <%= link_to 'Destroy', location_event_path(@location, event), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
